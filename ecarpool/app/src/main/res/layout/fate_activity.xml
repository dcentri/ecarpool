<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:orientation="vertical"
            android:background="@drawable/grad_selector">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="28dp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:layout_alignParentBottom="true"
                android:text="@string/lbl_passenger"/>
            <ImageView
                android:id="@+id/imgPassenger"
                android:layout_width="300px"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:onClick="setPassenger"
                android:src="@drawable/passeng" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:orientation="vertical"
            android:background="@color/driver_green">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="28dp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:layout_alignParentBottom="true"
                android:text="@string/lbl_driver"/>
            <ImageView
                android:id="@+id/imgDriver"
                android:layout_width="200px"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:onClick="setDriver"
                android:src="@drawable/driver" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>