<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:background="@drawable/grad_selector">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="15dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:textColor="@color/black"
                android:id="@+id/lblUserType"
                android:layout_height="30dp"
                android:text="@string/lbl_passenger"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textColorHint="@color/grey"
                    android:id="@+id/txtDriver"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="2dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textColorHint="@color/grey"
                    android:id="@+id/txtPhone"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="2dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textColorHint="@color/grey"
                    android:id="@+id/txtEmail"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="2dp"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="50dp"
                android:textColor="@color/black"
                android:layout_height="30dp"
                android:text="@string/lbl_depart"
                />
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/txtDeparture"
                android:inputType="text"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:paddingBottom="5dp"
                android:paddingTop="2dp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="50dp"
                android:textColor="@color/black"
                android:layout_height="30dp"
                android:text="@string/lbl_arrival"
                />
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/txtArrival"
                android:inputType="text"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:paddingBottom="5dp"
                android:paddingTop="2dp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="50dp"
                android:textColor="@color/black"
                android:layout_height="30dp"
                android:text="@string/lbl_km"
                />
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/txtKM"
                android:inputType="text"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:paddingBottom="5dp"
                android:paddingTop="2dp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="50dp"
                android:textColor="@color/black"
                android:layout_height="30dp"
                android:text="@string/lbl_date"
                />
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/txtDate"
                android:inputType="text"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:paddingBottom="5dp"
                android:paddingTop="2dp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_height="30dp"
                android:text="@string/lbl_frequency"
                />
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/txtFrequency"
                android:inputType="text"
                android:textColor="@color/white"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:paddingBottom="5dp"
                android:paddingTop="2dp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>

        <Button
            android:layout_width="220dp"
            android:background="@drawable/green_button"
            android:id="@+id/btnSendRequest"
            android:onClick="requestAction"
            android:layout_height="36dp"
            android:text="@string/lbl_find_parc"
            style="@style/button_text"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</LinearLayout >